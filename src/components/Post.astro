---
import { formatDate } from "@/utils/formatDate";

interface Props {
	post: Post;
}

const { post } = Astro.props;

const createdAt = formatDate(post.data.createdAt);
---
<article class="prose dark:prose-invert prose-h1:text-2xl prose-h1:mb-0 prose-h2:text-xl prose-h3:text-lg pt-8 mx-auto">
  <a href={`/posts/${post.slug}`}><h1>{post.data.title}</h1></a>
  <div class="grid grid-cols-[max-content_max-content] gap-3 text-sm">
    <span>作成日:<time datetime={createdAt}>{createdAt}</time></span>
    <div class="flex gap-x-2 flex-wrap text-sm">
      {post.data.tags.map((tag) => <a href={`/tags/${tag}`}>#{tag}</a>)}
    </div>
  </div>
  <slot />
</article>
