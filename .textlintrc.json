{
	"plugins": {
		"@textlint/markdown": {
			"extensions": [".mdx"]
		}
	},
	"filters": {
		"comments": true
	},
	"rules": {
		"preset-ja-technical-writing": true,
		"textlint-filter-rule-comments": true,
		"preset-ja-spacing": {
			"ja-space-between-half-and-full-width": {
				"space": "always"
			}
		}
	}
}
